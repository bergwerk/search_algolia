{
    "name": "martinhummer/search-algolia",
    "type": "typo3-cms-extension",
    "description": "TYPO3 indexer for Algolia Search Engine",
    "keywords": [
        "TYPO3",
        "search",
        "indexer",
        "Algolia"
    ],
    "authors": [
        {
            "name": "Martin Hummer",
            "email": "ma.hummer@gmail.com"
        }
    ],
    "license": "GPL-2.0+",
    "repositories": [
        {
            "type": "git",
            "url": "https://github.com/bergwerk/search_core"
        },
        {
            "type": "composer",
            "url": "https://packagist.org"
        },
        {
            "type": "composer",
            "url": "https://composer.typo3.org/"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "typo3/cms-core": ">= 8.7.0 < 10.0.0",
        "codappix/search_core": "dev-feature/dynamic-indices",
        "algolia/algoliasearch-client-php": "^1.23",
        "symfony/dotenv": "3.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^7",
        "typo3/testing-framework": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Mahu\\SearchAlgolia\\": "Classes"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mahu\\SearchAlgolia\\Tests\\": "Tests",
            "TYPO3\\CMS\\Core\\Tests\\": ".Build/vendor/typo3/cms/typo3/sysext/core/Tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "vendor-dir": ".Build/vendor",
        "bin-dir": ".Build/bin"
    },
    "scripts": {
        "post-autoload-dump": [
            "mkdir -p .Build/Web/typo3conf/ext/",
            "[ -L .Build/Web/typo3conf/ext/search_algolia ] || ln -snvf ../../../../. .Build/Web/typo3conf/ext/search_algolia"
        ]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev"
        },
        "typo3/cms": {
            "cms-package-dir": "{$vendor-dir}/typo3/cms",
            "web-dir": ".Build/Web"
        }
    }
}
